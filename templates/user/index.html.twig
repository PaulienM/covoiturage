{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<main role="main" class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <h1>Liste utilisateur</h1>
            <a class="btn btn-secondary justify-self-start" href="{{ path('user_new') }}"> Nouveau utilisateur</a>
            <div class="main-div">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Email</th>
                            <th scope="col">Roles</th>
                            <th scope="col">Password</th>
                            <th scope="col">Username</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.nom }}</td>
                            <td>
                                <a class="btn btn-secondary" href="{{ path('user_show', {'id': user.id}) }}">Voir + </a>
                                <a class="btn btn-secondary" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>


{% endblock %}
